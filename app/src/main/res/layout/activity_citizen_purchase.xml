<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CitizenPurchaseActivity">

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:background="@drawable/wallpaper"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/etPurchase"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center"
            android:text="@string/purchase"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etShopNameAndID"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

		<Button
			android:id="@+id/btn_return"
			android:layout_width="183dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center"
			android:hint="@string/back_to_dashboard" />

    </LinearLayout>

	<RelativeLayout
		android:id="@+id/relativeLayout"
		android:layout_width="410dp"
		android:layout_height="408dp"
		android:layout_marginTop="188dp"
		android:layout_marginBottom="3dp"
		android:background="#00BCD4"
		app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<View
			android:layout_width="5dp"
			android:layout_height="match_parent"
			android:layout_alignParentEnd="true"
			android:layout_marginEnd="116dp"
			android:background="@android:color/black"
			android:visibility="visible"
			tools:visibility="visible" />

		<ScrollView
			android:id="@+id/etScrollView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentEnd="true"
			android:layout_marginEnd="0dp">

			<LinearLayout
				android:id="@+id/etVerticalLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="410dp"
					android:layout_height="35dp"
					android:layout_marginStart="5dp"
					android:layout_marginTop="5dp"
					android:layout_marginEnd="5dp"
					android:layout_marginBottom="5dp"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/etItemNameHeading"
						android:layout_width="269dp"
						android:layout_height="35dp"
						android:layout_marginEnd="3dp"
						android:layout_weight="1"
						android:gravity="center"
						android:text="@string/item_name"
						android:textAlignment="center"
						android:textAppearance="@style/TextAppearance.AppCompat.Body1"
						android:textSize="18sp"
						android:textStyle="bold|italic" />

					<TextView
						android:id="@+id/etItemQuantityHeading"
						android:layout_width="wrap_content"
						android:layout_height="35dp"
						android:layout_marginStart="3dp"
						android:layout_weight="1"
						android:gravity="center"
						android:text="@string/item_quantity"
						android:textColor="#040000"
						android:textSize="18sp"
						android:textStyle="bold|italic" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:layout_marginStart="5dp"
					android:layout_marginTop="5dp"
					android:layout_marginEnd="5dp"
					android:orientation="horizontal">

					<AutoCompleteTextView
						android:id="@+id/etItemName1"
						android:layout_width="277dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="3dp"
						android:layout_weight="1"
						android:background="@drawable/border" />

					<AutoCompleteTextView
						android:id="@+id/etItemQuantity1"
						android:layout_width="104dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="3dp"
						android:layout_weight="1"
						android:background="@drawable/border"
						android:inputType="number" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:layout_marginStart="5dp"
					android:layout_marginTop="5dp"
					android:layout_marginEnd="5dp"
					android:orientation="horizontal">

					<AutoCompleteTextView
						android:id="@+id/etItemName2"
						android:layout_width="277dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="3dp"
						android:layout_weight="1"
						android:background="@drawable/border" />

					<AutoCompleteTextView
						android:id="@+id/etItemQuantity2"
						android:layout_width="104dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="3dp"
						android:layout_weight="1"
						android:background="@drawable/border"
						android:inputType="number" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:layout_marginStart="5dp"
					android:layout_marginTop="5dp"
					android:layout_marginEnd="5dp"
					android:orientation="horizontal">

					<AutoCompleteTextView
						android:id="@+id/etItemName3"
						android:layout_width="277dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="3dp"
						android:layout_weight="1"
						android:background="@drawable/border" />

					<AutoCompleteTextView
						android:id="@+id/etItemQuantity3"
						android:layout_width="104dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="3dp"
						android:layout_weight="1"
						android:background="@drawable/border"
						android:inputType="number" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:layout_marginStart="5dp"
					android:layout_marginTop="5dp"
					android:layout_marginEnd="5dp"
					android:orientation="horizontal">

					<AutoCompleteTextView
						android:id="@+id/etItemName4"
						android:layout_width="277dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="3dp"
						android:layout_weight="1"
						android:background="@drawable/border" />

					<AutoCompleteTextView
						android:id="@+id/etItemQuantity4"
						android:layout_width="104dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="3dp"
						android:layout_weight="1"
						android:background="@drawable/border"
						android:inputType="number" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:layout_marginStart="5dp"
					android:layout_marginTop="5dp"
					android:layout_marginEnd="5dp"
					android:orientation="horizontal">

					<AutoCompleteTextView
						android:id="@+id/etItemName5"
						android:layout_width="277dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="3dp"
						android:layout_weight="1"
						android:background="@drawable/border" />

					<AutoCompleteTextView
						android:id="@+id/etItemQuantity5"
						android:layout_width="104dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="3dp"
						android:layout_weight="1"
						android:background="@drawable/border"
						android:inputType="number" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:layout_marginStart="5dp"
					android:layout_marginTop="5dp"
					android:layout_marginEnd="5dp"
					android:orientation="horizontal">

					<AutoCompleteTextView
						android:id="@+id/etItemName6"
						android:layout_width="277dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="3dp"
						android:layout_weight="1"
						android:background="@drawable/border" />

					<AutoCompleteTextView
						android:id="@+id/etItemQuantity6"
						android:layout_width="104dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="3dp"
						android:layout_weight="1"
						android:background="@drawable/border"
						android:inputType="number" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:layout_marginStart="5dp"
					android:layout_marginTop="5dp"
					android:layout_marginEnd="5dp"
					android:orientation="horizontal">

					<AutoCompleteTextView
						android:id="@+id/etItemName7"
						android:layout_width="277dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="3dp"
						android:layout_weight="1"
						android:background="@drawable/border" />

					<AutoCompleteTextView
						android:id="@+id/etItemQuantity7"
						android:layout_width="104dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="3dp"
						android:layout_weight="1"
						android:background="@drawable/border"
						android:inputType="number" />
				</LinearLayout>

			</LinearLayout>
		</ScrollView>

		<ProgressBar
			android:id="@+id/add_product_pbar"
			style="?android:attr/progressBarStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerInParent="true"
			android:layout_marginTop="200dp" />

	</RelativeLayout>

	<LinearLayout
		android:id="@+id/bottomLayout"
		android:layout_width="409dp"
		android:layout_height="61dp"
		android:layout_marginTop="1dp"
		android:background="#00BCD4"
		android:orientation="horizontal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

		<Button
			android:id="@+id/etAddOrder"
			style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="5dp"
			android:layout_marginEnd="5dp"
			android:layout_weight="1"
			android:background="#E91E63"
			android:text="@string/add_another_order"
			android:textColor="#FFC107"
			app:layout_constraintStart_toStartOf="parent" />

		<Button
			android:id="@+id/etSendOrder"
			style="@style/Widget.AppCompat.Button.Borderless.Colored"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="5dp"
			android:layout_marginEnd="5dp"
			android:layout_weight="1"
			android:background="#FF9800"
			android:gravity="center"
			android:text="@string/send_shopping_list" />
	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>