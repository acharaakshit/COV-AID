<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    tools:context=".StoreDetailsFragment">

    <TextView
        android:id="@+id/etStoreUniqueID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#B31919"
        android:textColorHighlight="#E6D117"
        android:textStyle="normal|italic"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/etStoreLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/etStoreLocation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#03A9F4"
        android:textColorHighlight="#E6D117"
        android:textStyle="normal|italic"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etStoreUniqueID" />

    <TextView
        android:id="@+id/etStoreName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#C12457"
        android:textColorHighlight="#E6D117"
        android:textStyle="normal|italic"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etStoreLocation"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>